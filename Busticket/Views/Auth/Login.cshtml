@model Busticket.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Busticket - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        /* Animaciones compatibles con Tailwind CDN */
        @@keyframes fadeUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        }

        .animate-fadeUp {
            animation: fadeUp 0.7s ease-out forwards;
        }

        .animate-fadeIn {
            animation: fadeIn 0.6s ease-out forwards;
        }
    </style>
</head>

<body class="w-full h-full bg-gray-100 flex items-center justify-center">

    <!-- CONTENEDOR PRINCIPAL -->
    <div class="flex w-[1000px] h-[700px] bg-white rounded-2xl shadow-xl overflow-hidden animate-fadeUp">

        <!-- FORM -->
        <div class="flex flex-col justify-center px-16 py-10 w-1/2 space-y-2">

            <h1 class="text-3xl font-extrabold text-[#0A2A43] mb-6">
                Busticket
            </h1>

            <h2 class="text-4xl font-bold text-gray-900">
                ¡Bienvenido de nuevo!
            </h2>

            <p class="text-gray-600">
                Ingresa tus datos para acceder a tu cuenta
            </p>

            <form asp-action="Login" method="post" class="mt-10 space-y-6 animate-fadeIn">

                <!-- EMAIL -->
                <div>
                    <label class="font-medium text-gray-700">
                        Correo electrónico
                    </label>
                    <input asp-for="Email"
                           class="w-full border border-gray-300 rounded-lg p-3 mt-1
                                  transition-all duration-200
                                  focus:outline-none focus:ring-2 focus:ring-[#143A58]
                                  focus:scale-[1.01]"
                           placeholder="Ingresa tu correo" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- PASSWORD -->
                <div>
                    <label class="font-medium text-gray-700">
                        Contraseña
                    </label>
                    <input asp-for="Password"
                           type="password"
                           class="w-full border border-gray-300 rounded-lg p-3 mt-1
                                  transition-all duration-200
                                  focus:outline-none focus:ring-2 focus:ring-[#143A58]
                                  focus:scale-[1.01]"
                           placeholder="Ingresa tu contraseña" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                @if (ViewBag.Error != null)
                {
                    <p class="text-red-500 text-sm animate-fadeIn">
                        @ViewBag.Error
                    </p>
                }

                <a class="text-blue-600 text-sm block transition-colors hover:text-blue-800 hover:underline">
                    ¿Olvidaste tu contraseña?
                </a>

                <!-- BOTÓN LOGIN -->
                <button type="submit"
                        class="w-full bg-[#143A58] text-white py-3 rounded-lg font-medium
                               transition-all duration-300
                               hover:bg-[#0F2B45] hover:scale-[1.02]
                               active:scale-95 shadow-md hover:shadow-lg">
                    Iniciar sesión
                </button>

                <!-- SOCIAL LOGIN -->
                <div class="flex gap-3 pt-4">

                    <button type="button"
                            class="flex-1 border border-gray-300 py-3 rounded-lg
                                   flex items-center justify-center gap-2
                                   transition-all duration-300
                                   hover:bg-gray-50 hover:scale-[1.02]
                                   active:scale-95">
                        <img src="/img/google.png" class="w-5 h-5" />
                        Google
                    </button>

                    <button type="button"
                            class="flex-1 border border-gray-300 py-3 rounded-lg
                                   flex items-center justify-center gap-2
                                   transition-all duration-300
                                   hover:bg-gray-50 hover:scale-[1.02]
                                   active:scale-95">
                        <img src="/img/apple.png" class="w-5 h-5" />
                        Apple
                    </button>
                </div>

                <p class="text-sm text-gray-600 mt-4 text-center">
                    ¿No tienes cuenta?
                    <a href="/Auth/Register"
                       class="text-blue-600 font-medium transition-colors hover:text-blue-800 hover:underline">
                        Regístrate
                    </a>
                </p>

            </form>
        </div>

        <!-- IMAGEN -->
        <div class="w-1/2 overflow-hidden">
            <img src="https://res.cloudinary.com/dbt58u6ag/image/upload/v1764884373/chris-lee-70l1tDAI6rM-unsplash_2_b4fmff.png"
                 class="w-full h-full object-cover
                        transition-transform duration-[1200ms]
                        hover:scale-105"
                 alt="Imagen de ruta" />
        </div>

    </div>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
