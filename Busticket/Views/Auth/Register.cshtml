@model Busticket.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Busticket - Registro</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        @@keyframes fadeUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .animate-fadeUp {
            animation: fadeUp .7s ease-out forwards;
        }

        .animate-fadeIn {
            animation: fadeIn .4s ease-out forwards;
        }
    </style>
</head>

<body class="w-full h-full bg-gray-100 flex items-center justify-center">

    <div class="flex w-[1000px] h-[700px] bg-white rounded-2xl shadow-xl overflow-hidden animate-fadeUp">

        <!-- FORM -->
        <div class="flex flex-col justify-center px-16 py-10 w-1/2">

            <h2 class="text-2xl font-bold text-gray-900 mb-1">¡Crea tu cuenta!</h2>
            <p class="text-gray-600 mb-6">Selecciona el tipo de registro</p>

            <form asp-action="Register" method="post" class="space-y-5 animate-fadeIn">

                <!-- SELECTOR -->
                <div class="flex gap-2 mb-2">
                    <button type="button" data-tipo="Usuario"
                            class="tab-btn px-5 py-2 rounded-md bg-[#1f7f6d] text-white transition">
                        Usuario
                    </button>

                    <button type="button" data-tipo="Empresa"
                            class="tab-btn px-5 py-2 rounded-md bg-gray-300 text-gray-700 transition">
                        Empresa
                    </button>
                </div>

                <!-- TIPO -->
                <input type="hidden" asp-for="TipoUsuario" id="TipoUsuario" value="Usuario" />

                <!-- FORM USUARIO -->
                <div id="formUsuario" class="space-y-4">

                    <div>
                        <label class="block font-medium text-gray-700 mb-1">Nombre completo</label>
                        <input asp-for="Nombre"
                               class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-[#143A58]"
                               placeholder="nombre" />
                        <span asp-validation-for="Nombre" class="text-red-600 text-sm"></span>
                    </div>

                </div>

                <!-- FORM EMPRESA -->
                <div id="formEmpresa" class="space-y-4 hidden opacity-0 transition-all duration-300">

                    <div>
                        <label class="block font-medium text-gray-700 mb-1">Nombre de la empresa</label>
                        <input asp-for="NombreEmpresa"
                               class="w-full border rounded-lg p-3"
                               placeholder="Empresa S.A.S" />
                        <span asp-validation-for="NombreEmpresa" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label class="block font-medium text-gray-700 mb-1">NIT</label>
                        <input asp-for="Nit"
                               class="w-full border rounded-lg p-3"
                               placeholder="900123456" />
                        <span asp-validation-for="Nit" class="text-red-600 text-sm"></span>
                    </div>

                </div>

                <!-- EMAIL (UNO SOLO PARA TODO) -->
                <div>
                    <label class="block font-medium text-gray-700 mb-1">Correo electrónico</label>
                    <input asp-for="Email" type="email"
                           class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-[#143A58]"
                           placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>

                <!-- PASSWORD -->
                <div>
                    <label class="block font-medium text-gray-700 mb-1">Contraseña</label>
                    <input asp-for="Password" type="password"
                           class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-[#143A58]" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label class="block font-medium text-gray-700 mb-1">Confirmar contraseña</label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-[#143A58]" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                </div>

                <button class="w-full bg-[#143A58] text-white py-3 rounded-lg font-medium
                           transition hover:bg-[#0F2B45] hover:scale-[1.02] active:scale-95">
                    Registrarse
                </button>
            </form>

            <p class="text-center text-gray-600 text-sm mt-6">
                ¿Ya tienes cuenta?
                <a href="/Auth/Login" class="text-blue-600 font-medium hover:underline">
                    Iniciar sesión
                </a>
            </p>
        </div>

        <!-- IMAGEN -->
        <div class="w-1/2">
            <img src="https://res.cloudinary.com/dbt58u6ag/image/upload/v1764884373/chris-lee-70l1tDAI6rM-unsplash_2_b4fmff.png"
                 class="w-full h-full object-cover transition-transform duration-[1200ms] hover:scale-105" />
        </div>

    </div>

    <!-- SCRIPT -->
    <script>
        const buttons = document.querySelectorAll(".tab-btn");
        const tipoInput = document.getElementById("TipoUsuario");
        const formUsuario = document.getElementById("formUsuario");
        const formEmpresa = document.getElementById("formEmpresa");

        buttons.forEach(btn => {
            btn.addEventListener("click", () => {
                const tipo = btn.dataset.tipo;
                tipoInput.value = tipo;

                buttons.forEach(b => {
                    b.classList.remove("bg-[#1f7f6d]", "text-white");
                    b.classList.add("bg-gray-300", "text-gray-700");
                });

                btn.classList.add("bg-[#1f7f6d]", "text-white");

                if (tipo === "Empresa") {
                    formEmpresa.classList.remove("hidden", "opacity-0");
                    formEmpresa.classList.add("opacity-100");
                    formUsuario.classList.add("hidden");
                } else {
                    formUsuario.classList.remove("hidden");
                    formEmpresa.classList.add("opacity-0");
                    setTimeout(() => formEmpresa.classList.add("hidden"), 200);
                }
            });
        });
    </script>

</body>
</html>
