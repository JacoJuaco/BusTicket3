@{
    ViewBag.Title = "Página no encontrada";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>404 - Página no encontrada</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* Degradado suave superior e inferior */
        .overlay-gradient {
            background: linear-gradient(to bottom, rgba(0,0,0,0.75), rgba(0,0,0,0.25), rgba(0,0,0,0.75));
        }
    </style>
</head>

<body class="h-screen w-screen bg-black text-white flex items-center justify-center">

    <div class="relative w-full h-full overflow-hidden">

        <!-- Imagen de fondo -->
        <div class="absolute inset-0 bg-cover bg-center"
             style="background-image: url('https://res.cloudinary.com/dbt58u6ag/image/upload/v1765306268/fotobus_qg0jk7.webp');">
        </div>

        <!-- Overlay degradado -->
        <div class="absolute inset-0 overlay-gradient backdrop-brightness-50"></div>

        <!-- Contenido -->
        <div class="relative z-10 flex flex-col items-center justify-center h-full max-w-3xl mx-auto px-6">

            <p class="text-gray-300 tracking-widest mb-2 text-sm md:text-base">
                404
            </p>

            <h1 class="text-4xl md:text-6xl font-extrabold mb-4 drop-shadow-lg">
                Página no encontrada
            </h1>

            <p class="text-gray-300 text-lg md:text-xl mb-8 leading-relaxed drop-shadow-md">
                Lo sentimos, no pudimos encontrar la página que estás buscando.
            </p>

            <a href="/Home/Index"
               class="px-8 py-3 rounded-full bg-white/20 hover:bg-white/30 backdrop-blur-md border border-white/30
                      transition-all duration-300 text-white font-semibold shadow-lg">
                ← Volver a inicio
            </a>
        </div>

    </div>

</body>
</html>
