@model Busticket.Models.Venta

@{
    ViewBag.Title = "Pago confirmado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Compra realizada</title>
</head>
<body class="flex justify-center items-center min-h-screen bg-gray-100">

    <div class="bg-white p-10 rounded-xl shadow-lg text-center">
        <h1 class="text-3xl font-bold text-green-600 mb-4">
            ¡Compra realizada con éxito!
        </h1>

        <p class="mb-6">
            Gracias por tu compra.
        </p>

        <a asp-controller="Pago"
           asp-action="DescargarBoleto"
           asp-route-ventaId="@Model.VentaId"
           target="_blank"
           class="bg-[#284D67] text-white px-6 py-3 rounded-lg inline-block">
            Descargar boletos (PDF)
        </a>


        <div class="mt-6">
            <a href="/Rutas/Index" class="text-blue-600 underline">
                Volver a rutas
            </a>
        </div>
    </div>

</body>
</html>
