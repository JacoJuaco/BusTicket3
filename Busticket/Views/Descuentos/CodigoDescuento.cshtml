@{
    ViewBag.Title = "Código de descuento";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Cupón</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">

    <div class="bg-white p-8 rounded-xl shadow-lg text-center w-[400px]">

        <h2 class="text-2xl font-bold text-green-600 mb-4">
            ¡Descuento aplicado!
        </h2>

        <p class="text-gray-600 mb-2">
            Usa este código en tu compra
        </p>

        <div class="text-3xl font-extrabold tracking-widest
                    bg-gray-100 p-4 rounded mb-6">
            @ViewBag.Codigo
        </div>

        <a href="/Itinerarios/Index"
           class="inline-block bg-blue-600 text-white
                  px-6 py-3 rounded hover:bg-blue-700 transition">
            Mirar rutas
        </a>

    </div>

</body>
</html>
