@model Busticket.Models.Empresa

@{
    Layout = "_Layout";
}

<div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-xl shadow-md">
    <h1 class="text-3xl font-bold mb-6">Editar Empresa</h1>

    <form asp-action="Editar" method="post" class="space-y-4">
        <input type="hidden" asp-for="EmpresaId" />

        <!-- Nombre (OBLIGATORIO) -->
        <div>
            <label asp-for="Nombre" class="block text-gray-700 mb-1"></label>
            <input asp-for="Nombre" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
        </div>

        <!-- País -->
        <div>
            <label asp-for="Pais" class="block text-gray-700 mb-1"></label>
            <input asp-for="Pais" class="w-full border rounded px-3 py-2" />
        </div>

        <!-- Teléfono -->
        <div>
            <label asp-for="Telefono" class="block text-gray-700 mb-1"></label>
            <input asp-for="Telefono" class="w-full border rounded px-3 py-2" />
        </div>

        <!-- Botón Guardar -->
        <div class="flex justify-end gap-2">
            <a asp-action="Index" class="bg-gray-500 text-white px-5 py-2 rounded hover:bg-gray-600">
                Cancelar
            </a>
            <button type="submit" class="bg-yellow-600 text-white px-5 py-2 rounded hover:bg-yellow-700">
                Guardar Cambios
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
