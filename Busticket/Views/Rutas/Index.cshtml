@model List<Busticket.Models.Ruta>

@{
    ViewBag.Title = "Rutas";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.css" />
    <script src="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.js"></script>
</head>

<body class="bg-gray-100">

    <!-- HEADER -->
    <header class="py-6 bg-white shadow-sm">
        <div class="max-w-[1300px] mx-auto flex items-center justify-between">

            <div class="text-3xl font-extrabold text-[#284D67]">
                <a href="/Home/Index">Busticket</a>
            </div>

            <nav class="flex gap-12">

                <a href="/Planes/Index" class="text-base font-medium hover:text-[#002C53] hover:font-bold">Planes</a>

                <a href="/Descuentos/Index" class="text-base font-medium hover:text-[#002C53] hover:font-bold">Descuentos</a>
            </nav>

            <div>
                <img src="data:image/svg+xml;utf8,
                <svg xmlns='http://www.w3.org/2000/svg' width='28' height='28' fill='%23284D67'
                     viewBox='0 0 24 24'>
                    <path d='M12 12c2.761 0 5-2.239 5-5s-2.239-5-5-5-5
                    2.239-5 5 2.239 5 5 5zm0 2c-3.314 0-10
                    1.657-10 5v3h20v-3c0-3.343-6.686-5-10-5z' />
                </svg>"
                class="w-7 cursor-pointer">
            </div>
        </div>
    </header>

    <!-- ðŸ“Œ CONTENEDOR PRINCIPAL (FILTROS + RUTAS + MAPA) -->
    <div class="flex max-w-[1300px] mx-auto mt-6 gap-10">

        <!-- ðŸ”µ SIDEBAR (FILTROS) -->
        <aside class="w-80 bg-white shadow rounded-xl p-6 h-fit sticky top-4">

            <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
                <i class="fa fa-filter text-[#284D67]"></i> Filtros
            </h2>

            <form method="get" action="/Rutas/Index" class="space-y-5">

                <!-- ORIGEN -->
                <div>
                    <label class="text-sm font-semibold text-gray-600">Desde</label>
                    <select name="origen" class="mt-1 w-full border rounded-lg px-3 py-2">
                        <option value="">Todas</option>
                        @foreach (var c in Model.Select(m => m.CiudadOrigen).Distinct())
                        {
                            <option value="@c.Nombre">@c.Nombre</option>
                        }
                    </select>
                </div>

                <!-- DESTINO -->
                <div>
                    <label class="text-sm font-semibold text-gray-600">Hasta</label>
                    <select name="destino" class="mt-1 w-full border rounded-lg px-3 py-2">
                        <option value="">Todas</option>
                        @foreach (var c in Model.Select(m => m.CiudadDestino).Distinct())
                        {
                            <option value="@c.Nombre">@c.Nombre</option>
                        }
                    </select>
                </div>

                <!-- EMPRESA -->
                <div>
                    <label class="text-sm font-semibold text-gray-600">Empresa</label>
                    <select name="empresa" class="mt-1 w-full border rounded-lg px-3 py-2">
                        <option value="">Todas</option>
                        @foreach (var e in Model.Select(m => m.Empresa).Distinct())
                        {
                            <option value="@e.Nombre">@e.Nombre</option>
                        }
                    </select>
                </div>

                <!-- PRECIO -->
                <div>
                    <label class="text-sm font-semibold text-gray-600">Rango de precio</label>
                    <select name="precio" class="mt-1 w-full border rounded-lg px-3 py-2">
                        <option value="">Todos</option>
                        <option value="1">0 - 30.000</option>
                        <option value="2">30.000 - 60.000</option>
                        <option value="3">60.000 - 100.000</option>
                        <option value="4">MÃ¡s de 100.000</option>
                    </select>
                </div>

                <!-- DURACIÃ“N -->
                <div>
                    <label class="text-sm font-semibold text-gray-600">DuraciÃ³n</label>
                    <select name="duracion" class="mt-1 w-full border rounded-lg px-3 py-2">
                        <option value="">Todas</option>
                        <option value="1">0 - 60 min</option>
                        <option value="2">60 - 120 min</option>
                        <option value="3">120 - 240 min</option>
                        <option value="4">MÃ¡s de 240 min</option>
                    </select>
                </div>

                <button type="submit"
                        class="w-full bg-[#284D67] text-white py-2 rounded-lg hover:bg-[#1f3a4d]">
                    Aplicar filtros
                </button>

            </form>
        </aside>

        <!-- ðŸ”µ LISTADO DE RUTAS -->
        <div class="w-[55%] bg-white rounded-xl shadow p-4 h-[85vh] overflow-y-auto">

            <h3 class="text-xl font-bold mb-4">@Model.Count rutas encontradas</h3>

            <div id="rutasContainer" class="flex flex-col gap-4">

                @foreach (var ruta in Model)
                {
                    <div class="ruta-card flex items-center justify-between p-4 bg-white
                                    rounded-xl border border-gray-200 shadow-sm hover:shadow-md
                                    transition cursor-pointer"
                         data-origen-lat="@ruta.CiudadOrigen.Lat"
                         data-origen-lng="@ruta.CiudadOrigen.Lng"
                         data-destino-lat="@ruta.CiudadDestino.Lat"
                         data-destino-lng="@ruta.CiudadDestino.Lng"
                         data-id="@ruta.RutaId">

                        <img src="@((ruta.ImagenUrl != null) ? ruta.ImagenUrl : $"https://picsum.photos/seed/{ruta.RutaId}/200/130")"
                             class="w-32 h-24 rounded-lg object-cover" />

                        <div class="flex flex-col flex-grow px-4">
                            <p class="font-bold text-lg text-gray-800">
                                @ruta.CiudadOrigen.Nombre â€” @ruta.CiudadDestino.Nombre
                            </p>

                            <p class="text-sm text-gray-500">Empresa: @ruta.Empresa.Nombre</p>
                            <p class="text-sm text-gray-500">DuraciÃ³n: @ruta.DuracionMin min</p>

                            <div class="flex items-center gap-1 mt-1">
                                <span class="text-yellow-400 text-lg">â˜…</span>
                                <span class="text-sm text-gray-700">5.0</span>
                            </div>
                        </div>

                        <div class="flex flex-col items-end">
                            <p class="font-bold text-blue-900 mt-4">
                                $@ruta.Precio.ToString("N0") COP
                            </p>
                        </div>

                    </div>
                }
            </div>
        </div>

        <!-- ðŸ”µ MAPA A LA DERECHA -->
        <div class="w-[330px] flex justify-center items-start pt-4">
            <div id="map" class="w-[330px] h-[330px] rounded-xl shadow"></div>
        </div>

    </div>

    <!-- JS DEL MAPA -->
    <script>
        var map = L.map('map').setView([10.97, -74.78], 7);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

        var routingControl = null;

        document.querySelectorAll('.ruta-card').forEach(card => {

            card.addEventListener('mouseenter', () => {

                var oLat = parseFloat(card.dataset.origenLat);
                var oLng = parseFloat(card.dataset.origenLng);
                var dLat = parseFloat(card.dataset.destinoLat);
                var dLng = parseFloat(card.dataset.destinoLng);

                if (routingControl) map.removeControl(routingControl);

                routingControl = L.Routing.control({
                    waypoints: [L.latLng(oLat, oLng), L.latLng(dLat, dLng)],
                    lineOptions: { styles: [{ color: '#00335c', weight: 4 }] },
                    addWaypoints: false,
                    draggableWaypoints: false,
                    show: false
                }).addTo(map);

                map.fitBounds([[oLat, oLng], [dLat, dLng]]);
            });

            card.addEventListener('click', () => {
                window.location.href = '/Rutas/info/' + card.dataset.id;
            });

        });
    </script>

</body>
</html>
