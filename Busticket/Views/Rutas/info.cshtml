@using Busticket.Extensions
@model Busticket.Models.ReporteVentaVM

@{
    ViewBag.Title = "Busticket - Selecci√≥n de Asientos";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Busticket</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        .asiento:hover .tooltip {
            display: block;
        }
    </style>
</head>

<body class="bg-gray-100">

    <!-- ================= HEADER ================= -->
    <header class="py-6 bg-white shadow-md">
        <div class="w-[95%] max-w-[1400px] mx-auto flex items-center justify-between">

            <div class="text-3xl font-extrabold text-[#284D67]">
                <a href="/Home/Index">Busticket</a>
            </div>

            <nav class="flex gap-12">
                <a href="/Planes/Index" class="hover:font-bold">Planes</a>
                <a href="/Descuentos/Index" class="hover:font-bold">Descuentos</a>
            </nav>

            <div class="relative">
                <button id="btnCarrito">
                    <i class="fa fa-shopping-cart text-2xl text-[#284D67]"></i>
                </button>

                <div id="dropdownCarrito"
                     class="hidden absolute right-0 mt-2 w-64 bg-white shadow-lg rounded-lg p-4 z-50">

                    <h3 class="font-bold mb-2">Carrito</h3>

                    <ul id="listaCarrito" class="space-y-1 text-sm">
                        @{
                            var carrito = Context.Session.GetObjectFromJson<List<string>>("Carrito") ?? new();
                            var total = Context.Session.GetString("Total") ?? "0";
                        }
                        @foreach (var item in carrito)
                        {
                            <li class="border-b pb-1">@item</li>
                        }
                    </ul>

                    <p class="mt-2 font-semibold">
                        Total: $<span id="totalCarrito">@total</span>
                    </p>

                    <a href="/Pago/Index"
                       class="block mt-3 bg-green-600 text-white text-center rounded py-1">
                        Finalizar compra
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- ================= CONTENIDO ================= -->
    <div class="max-w-6xl mx-auto p-6 grid grid-cols-1 md:grid-cols-2 gap-10">

        <!-- ===== MAPA DE SILLAS ===== -->
        <div class="bg-white p-6 rounded-xl shadow-lg">

            <h2 class="text-2xl font-bold mb-4">Selecciona tu silla</h2>

            <!-- Leyenda -->
            <div class="flex gap-6 text-sm mb-4">
                <div class="flex items-center gap-2">
                    <span class="w-4 h-4 bg-white border-2 border-[#7a3e1d] rounded"></span>
                    Disponible
                </div>
                <div class="flex items-center gap-2">
                    <span class="w-4 h-4 bg-gray-300 rounded"></span>
                    No disponible
                </div>
            </div>

            <!-- BUS -->
            <div class="mx-auto w-[360px] bg-white border-2 border-gray-300 rounded-[3rem] p-6 shadow-inner">

                <div class="grid grid-cols-5 gap-3 justify-items-center">

                    @foreach (var asiento in Model.Asientos)
                    {
                        bool esPasillo = asiento.Numero % 4 == 3;

                        if (esPasillo)
                        {
                            <div class="w-6"></div>
                        }

                    <button class="asiento relative w-10 h-10 rounded-md text-xs font-bold
                        border-2
                        @(asiento.Disponible
                                                        ? "bg-white border-[#7a3e1d] text-[#7a3e1d] hover:bg-[#7a3e1d] hover:text-white"
                                                        : "bg-gray-300 border-gray-300 text-gray-500 cursor-not-allowed")
                            transition"
                                data-id="@asiento.AsientoId"
                                data-codigo="@asiento.Numero"
                                @(asiento.Disponible ? "" : "disabled")>

                            @asiento.Numero

                            @if (asiento.Disponible)
                            {
                                <div class="tooltip hidden absolute top-[-70px] left-1/2 -translate-x-1/2
                                                bg-white border rounded-lg shadow-lg px-3 py-2 text-xs w-[150px]">
                                    <p class="font-semibold">Silla n.¬∫ @asiento.Numero</p>
                                    <p class="text-green-600">Disponible</p>
                                    <p class="font-bold">
                                        COP @Model.Ruta.Precio.ToString("N0")
                                    </p>
                                </div>
                            }
                        </button>
                    }
                </div>
            </div>
        </div>

        <!-- ===== DETALLE Y RESUMEN ===== -->
        <div class="bg-white p-6 rounded-xl shadow-lg">

            <h1 class="text-3xl font-bold mb-4">
                @Model.Ruta.CiudadOrigen?.Nombre ‚Äî
                @Model.Ruta.CiudadDestino?.Nombre
            </h1>

            <p>üöç Empresa: <b>@Model.Ruta.Empresa.Nombre</b></p>
            <p>‚è± Duraci√≥n: <b>@Model.Ruta.DuracionMin min</b></p>
            <p>üíµ Precio por asiento: <b>@Model.Ruta.Precio.ToString("N0") COP</b></p>

            <h2 class="text-2xl font-bold mt-6">Resumen</h2>
            <p class="text-lg mt-2">
                Total: <span id="total">0</span> COP
            </p>

            <form id="formCarrito">
                @Html.AntiForgeryToken()
            </form>

            <button id="agregarCarrito"
                    class="mt-4 bg-[#284D67] text-white px-6 py-3 rounded-lg hover:bg-[#1f3a4d]">
                Agregar al carrito
            </button>
        </div>
    </div>

    <!-- ================= JS ================= -->

    <script>
        (() => {

            // ---------------- CARRITO TOGGLE ----------------
            const btnCarrito = document.getElementById("btnCarrito");
            const dropdownCarrito = document.getElementById("dropdownCarrito");

            btnCarrito.addEventListener("click", e => {
                e.stopPropagation();
                dropdownCarrito.classList.toggle("hidden");
            });

            document.addEventListener("click", () => {
                dropdownCarrito.classList.add("hidden");
            });

            dropdownCarrito.addEventListener("click", e => e.stopPropagation());

            // ---------------- ASIENTOS ----------------
            let asientosSeleccionados = [];
            const precioAsiento = parseInt("@Model.Ruta.Precio");
            const formato = new Intl.NumberFormat("es-CO");

            function actualizarTotal() {
                document.getElementById("total").textContent =
                    formato.format(asientosSeleccionados.length * precioAsiento);
            }

            document.querySelectorAll(".asiento").forEach(btn => {
                btn.addEventListener("click", () => {

                    if (btn.disabled) return;

                    const id = parseInt(btn.dataset.id);
                    const codigo = btn.dataset.codigo;

                    const existe = asientosSeleccionados.some(a => a.id === id);

                    if (existe) {
                        asientosSeleccionados = asientosSeleccionados.filter(a => a.id !== id);
                        btn.classList.remove("bg-blue-600", "text-white");
                        btn.classList.add("bg-white", "border-[#7a3e1d]", "text-[#7a3e1d]");
                    } else {
                        asientosSeleccionados.push({ id, codigo });
                        btn.classList.remove("bg-white", "border-[#7a3e1d]", "text-[#7a3e1d]");
                        btn.classList.add("bg-blue-600", "text-white");
                    }

                    actualizarTotal();
                });
            });

            // ---------------- AGREGAR AL CARRITO ----------------
            document.getElementById("agregarCarrito").addEventListener("click", async () => {

                if (asientosSeleccionados.length === 0) {
                    Swal.fire("Atenci√≥n", "Selecciona al menos un asiento", "warning");
                    return;
                }

                const dto = {
                    RutaId: @Model.Ruta.RutaId,
                    Asientos: asientosSeleccionados.map(a => a.codigo)
                };

                const token = document.querySelector(
                    'input[name="__RequestVerificationToken"]'
                ).value;

                const res = await fetch("/Carrito/Agregar", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "RequestVerificationToken": token
                    },
                    body: JSON.stringify(dto)
                });

                const json = await res.json();

                if (!res.ok) {
                    Swal.fire("Error", json.mensaje, "error");
                    return;
                }

                // ‚úÖ ALERTA
                Swal.fire("Listo", json.mensaje, "success");

                // ‚úÖ TOTAL
                document.getElementById("total").textContent =
                    formato.format(json.total);

                document.getElementById("totalCarrito").textContent =
                    formato.format(json.total);

                // ‚úÖ LISTA CARRITO
                const lista = document.getElementById("listaCarrito");
                lista.innerHTML = "";

                json.asientos.forEach(codigo => {
                    const li = document.createElement("li");
                    li.textContent = `Asiento ${codigo}`;
                    lista.appendChild(li);

                    // üîí BLOQUEAR ASIENTO
                    const btn = document.querySelector(
                        `.asiento[data-codigo='${codigo}']`
                    );

                    if (btn) {
                        btn.disabled = true;
                        btn.classList.remove("bg-blue-600", "text-white");
                        btn.classList.add(
                            "bg-gray-300",
                            "border-gray-300",
                            "text-gray-500",
                            "cursor-not-allowed"
                        );
                    }
                });

                // ‚úÖ LIMPIAR SELECCI√ìN
                asientosSeleccionados = [];
                actualizarTotal();
            });

        })();
    </script>


</body>
</html>
